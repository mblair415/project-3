<p id="notice"><%= notice %></p>
<h1>POST SHOW</h1>

<div class="row">
  <div class="col s6 left">
    <%= link_to edit_post_path(@post), :class => 'waves-effect waves-light btn' do %>
      <i class="material-icons left">create</i>Edit
    <% end %>
  </div>
  <div class="col s6 right">
    <%= link_to post_path(@post), action: "destroy", :class => 'waves-effect waves-light btn right', data: { confirm: "Dude, you sure you want to dump those kicks!?" }  do %>
      <i class="material-icons right">delete</i>Delete
    <% end %>
  </div>
</div>
<div class="row">
  <div class="post card col s8">
    <div class="row">
      <div class="post-author col s6">
        <b>Author: </b><%= @user.user_name %>
      </div>
      <div class="post-author col s6">
        <b>Posted: </b><%= @user.created_at.to_date %>
      </div>
    </div>
    <div class="post-title center col s12">
      <h2><%= @post.title %></h2>
    </div>
    <div class="post-content col s12">
      <h6><%= @post.content %></h6>
    </div>
  </div>
  <div class="image col s4">
    <img src="<%= @post.image %>" alt="post image" />
  </div>
</div>

<%= link_to 'Back', posts_path %>
